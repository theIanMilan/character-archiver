<% content_for :title, "Character Archiver | Enrich your D&D Character's backstories" %>

<section class="container">
<!-- Centered screenshot -->
<div class="px-4 pt-5 my-1 text-center border-bottom">
  <i class="fas fa-dice-d20 fa-5x mb-3" style="color: crimson;" role="img" aria-label="Brand Icon"></i>
  <h1 class="display-4 fw-bold">Welcome to the Land of the Archivist!</h1>
  <div class="col-lg-6 mx-auto">
    <p class="lead mb-4">Share your D&D Character's rich backstory with the community and develop it further by connecting with users and creating social relationships between characters!
      <span>
        <i class="fas fa-scroll" role="img" aria-label="Icon"></i>
        <i class="fas fa-feather-alt" role="img" aria-label="Icon"></i>
      </span>
    </p>
    
    <div class="d-grid gap-2 d-sm-flex justify-content-sm-center mb-5">
      <% if user_signed_in? %>
          <%= button_to "List of all Characters", characters_path, class: 'btn btn-primary btn-lg px-4 me-sm-3', method: 'get' %>
          <%= button_to 'My Characters', user_characters_path(current_user.username), class: 'btn btn-outline-secondary btn-lg px-4', method: 'get' %>
      <% else %>
          <%= button_to "Sign in", new_user_session_path, class: 'btn btn-primary btn-lg px-4 me-sm-3', method: 'get' %>
          <%= button_to "Register", new_user_registration_path, class: 'btn btn-outline-secondary btn-lg px-4', method: 'get' %>
      <% end %>
    </div>
  </div>
  <div>
    <div class="container px-5">
      <%= image_tag 'clint-bustrillos-X-A-LJVAhzk-unsplash.jpg', class: "img-fluid border rounded-3 shadow-lg mb-4", alt: "red dragon action figure on table photo by Clint Bustrillos", loading: "lazy", width: "700", height: "500" %>
    </div>
  </div>
</div>
</section>

<!-- Contact Form -->
<section id="contact-form" class="w-100 background-gradient">
  <div class="container py-3">
    <!--Section heading-->
    <h2 class="fw-bolder text-center my-4">Contact us</h2>
    <!--Section description-->
    <p class="text-center w-responsive mx-auto mb-5"></p>

    <%= render 'contact_form' %>
  </div>
</section>
