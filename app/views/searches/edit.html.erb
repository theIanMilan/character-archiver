<% content_for :title, "Editing Search details for #{@character.character_name}" %>

<h1>Editing Search details for <%= @character.character_name %></h1>

<%= form_with(model: @search, url: "/characters/#{@character.id}/searches/", method: 'put') do |f| %>
    <div>
      <%= f.label :searching_for_connections %>
      <%= f.check_box :searching_for_connections %>
    </div>

    <div>
      <%= f.label :search_message %>
      <%= f.text_field :search_message %>
    </div>

  <div>
    <%= f.submit %>
  </div>
  <br>
<% end %>

<%= link_to 'Back', :back %>

<% if @search.persisted? %>
  <%= link_to 'Delete Search details',  character_searches_path(@character),
      method: :delete, data: {confirm: "Are you sure you want to delete this Character's Search details?"},
      class: 'button-delete' %>
<% end %>