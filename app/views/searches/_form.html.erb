  <%= simple_form_for(@search, url: "/characters/#{@character.id}/searches/", method: 'put') do |f| %>
    <%= f.error_notification %>
    
    <%= f.input :searching_for_connections %>

    <%= f.input :search_message %>
  
    <%= f.button :submit, class: 'btn btn-primary my-3' %>
  <% end %>
  
  <%= link_to 'Back', :back, class: 'me-3' %>
  
  <% if @search.persisted? %>
    <%= link_to 'Delete Search details',  character_searches_path(@character),
        method: :delete, data: {confirm: "Are you sure you want to delete this Character's Search details?"},
        class: 'button-delete' %>
  <% end %>